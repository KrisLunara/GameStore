mixin userForm(user, saveUrl, cancelUrl, deleteUrl, buttonText)
    form(action=saveUrl method="POST")
        div.input-form-row
            div.input-container
                label(for="first_name").form-label First Name
                input(type="first_name" name="first_name" id="first_name" required=true).form-control
            div.input-container
                label(for="last_name").form-label Last Name
                input(type="last_name" name="last_name" id="last_name" required=true).form-control
            div.input-container
                label(for="email").form-label Email Address
                input(type="email" name="email" id="email" required=true)
            div.input-container
                label(for="password").form-label Password
                input(type="password" name="password" id="password" required=true)
                div.helper-text Must be 8-20 characters long
            button.button.primary(type="submit") #{buttonText}
            a.button(href=deleteUrl) Delete
            a.button(href=cancelUrl) Cancel